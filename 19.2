package javaapplication1;
public class Human {
    String name;
    int age;
    EyeColor eye;
    HairColor hair;
  Human(int age,String name,EyeColor eye,HairColor hair)
  {
    this.age=age;
    this.name=name;
    this.eye=eye;
    this.hair=hair; 
  }
  public void Info(){
      System.out.println("name :"+name+"\nage :"+age+"\nhair color :"+hair+"\neye color:"+eye);
  }
  public static void main(String[] args)  {
     Human h=new Human(23,"dawid",EyeColor.Blue,HairColor.Blond);
     h.Info();
}
};
